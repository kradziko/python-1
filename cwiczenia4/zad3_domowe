'''
ksiazka adresowa
mozna dane wprawadzic usunac i zmodyfikowac
dane powinny byc wyswietlane w postaci tabeli
menu z opcjami
wyswietla sie jako tabelka
usun wg indentyfikatora np. (nr pesel)
'''

class Kontakt:
    def __init__(self, imie=None, nazwisko=None, telefon=None, mail=None, kraj=None):
        self.dane = {}
        self.dane['imie'] = imie
        self.dane['nazwisko'] = nazwisko
        self.dane['telefon'] = telefon
        self.dane['mail'] = mail
        self.dane['kraj'] = kraj
    def pobierz_z_klawiatury(self):
        self.dane['imie'] = raw_input("Podaj imie: ")
        self.dane['nazwisko'] = raw_input("Podaj nazwisko: ")
        self.dane['telefon'] = raw_input("Podaj telefon: ")
        self.dane['mail'] = raw_input("Podaj adres e-mail: ")
        self.dane['kraj'] = raw_input("Podaj kraj zamieszkania: ")
    def wyswietl_kontakt(self):
        print "%s %s " % (self.dane['imie'], self.dane['nazwisko'])

class KsiazkaAdresowa:
    def __init__(self):
        self.kontakty = []

    def dodaj(self, k):
        self.kontakty.append(k)

    def usun(self, id):
        del self.kontakty[id]

    def edytuj(self):
        pass

    def wyswietl(self):
        print "|%10s|%10s|%10s|%10s|" %("Imie".ljust(20),
                                        "Nazwisko".ljust(20),
                                        "Telefon".ljust(20),
                                        "Adres e-mail".ljust(20))
        for i in self.kontakty:
            i.wyswietl_kontakt()

class Program:
    def __init__(self, tytul):
        self.tytul = tytul
        self.ksiazka = KsiazkaAdresowa()
        self.petla = True
        self.start()
        while self.petla:
            self.opcje()

            self.wyjscie()

    def start(self):
        print self.tytul.upper().center(64)
        self.ksiazka.wyswietl()

    def opcje(self):
        print "Wybierz czynnosc ktora chcesz wykonac: "
        print "1 - Dodaj nowy kontakt"
        print "2 - Modyfikuj istniejacy kontakt"
        print "3 - Usun kontakt"
        opcja = raw_input("Podaj opcje, ktora chcesz wykonac: ")

    def dodaj(self):
        k = Kontakt()
        k.pobierz_z_klawiatury()
        self.kontakty.append(k)

    def wyjscie(self):
        x = raw_input("Chcesz wyjsc z programu? t/n: ")
        if x == 't':
            self.petla = False

Program('program ksiazka adresowa')

